Bootstrap: library
From: ubuntu:18.10

%post
    apt-get -q -y update
    apt-get -q -y install software-properties-common
    add-apt-repository universe
    add-apt-repository ppa:ngsolve/ngsolve
    apt-get -q -y update
    env DEBIAN_FRONTEND=noninteractive apt-get -q -y install python3 python3-pip python3-virtualenv libpython3-dev python3-numpy python3-scipy python3-matplotlib python3-pynfft python3-pytest ngsolve
    apt-get clean

%runscript
    exec /usr/bin/python3 "$@"
